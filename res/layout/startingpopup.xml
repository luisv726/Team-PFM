<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/background_color">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="@string/welcomeText"
        android:textAppearance="?android:attr/textAppearanceLarge" android:textColor="@color/text_color" android:textSize="18dp" android:textStyle="bold" android:paddingBottom="50dp"/>

    <Button
        android:id="@+id/defaultListButton"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/welcomeText"
        android:layout_centerHorizontal="true"
        android:onClick = "defaultList"
        android:text="@string/defaultAirportList" android:textSize="25dp" android:textStyle="bold" android:textColor="@color/buttontext_color" android:background="@color/foreground_color" android:layout_margin="20dp"/>

    <Button
        android:id="@+id/userListButton"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/defaultListButton"
        android:layout_centerHorizontal="true"
        android:onClick="customList"
        android:text="@string/userList" android:layout_margin="20dp" android:textSize="25dp" android:textStyle="bold" android:textColor="@color/buttontext_color" android:background="@color/foreground_color"/>

</RelativeLayout>