<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@color/background_color">

    <Button
        android:id="@+id/adddeletepageAdd"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="@string/adddeletepageAdd" android:textSize="25dp" android:layout_gravity="center" android:layout_margin="15dp" android:textStyle="bold" android:background="@color/foreground_color" android:textColor="@color/buttontext_color"/>

    <Button
        android:id="@+id/adddeletepageDelete"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="@string/adddeletepageDelete" android:textSize="25dp" android:textStyle="bold" android:layout_margin="15dp" android:layout_gravity="center" android:background="@color/foreground_color" android:textColor="@color/buttontext_color"/>

</LinearLayout>