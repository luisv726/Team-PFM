<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:background="@color/background_color">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="50dp" android:layout_marginTop="20dp" android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/densityaltitudepagePressureAltitude"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/densityaltitudepagePressureAltitude"
                android:textSize="16dp"
                android:textStyle="bold" android:textColor="@color/text_color"/>

            <EditText
                android:id="@+id/densityaltitudePressureAltitudeInput"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:text="@string/densityaltitudepagePressureAltitudeInput" >

                <requestFocus />
            </EditText>
        </TableRow>
       
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="50dp" android:layout_marginBottom="30dp" android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/densityaltitudeOutsideAirTemp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/densityaltitudepageOutsideAirTemp"
                android:textSize="16dp"
                android:textStyle="bold" android:textColor="@color/text_color"/>

            <EditText
                android:id="@+id/densityaltitudeOutsideAirTempInput"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:text="@string/densityaltitudepageOutsideAirTempInput" >

                <requestFocus />
            </EditText>
        </TableRow>
        
        <Button
            android:id="@+id/densityaltitudepageCalculate"
            android:text="@string/densityaltitudepageCalculate" 
            android:layout_width="fill_parent"
             android:layout_height="40dp"
             android:layout_margin="20dp" 
             android:textStyle="bold" 
             android:textSize="25dp" 
             android:background="@color/foreground_color" 
             android:textColor="@color/buttontext_color"/>
        
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="50dp" android:layout_marginBottom="30dp" android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/densityaltitudeDensityAltitude"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/densityaltitudeDensityAltitude"
                android:textSize="16dp"
                android:textStyle="bold" android:textColor="@color/text_color"/>

            <EditText
                android:id="@+id/densityaltitudeDensityAltitudeOutput"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:text="@string/densityaltitudepageDensityAltitudeOutput" >

                <requestFocus />
            </EditText>
        </TableRow>
        
         
</LinearLayout>